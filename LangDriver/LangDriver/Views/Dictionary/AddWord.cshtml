@model LangDriver.Common.Models.Word

@{
    ViewData["Title"] = "AddWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddWord</h2>

<h4>Word</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
